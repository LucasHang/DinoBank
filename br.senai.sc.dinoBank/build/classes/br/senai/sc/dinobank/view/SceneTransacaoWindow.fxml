<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="498.0" prefWidth="543.0" stylesheets="@../resources/styles/bootstrap3.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.senai.sc.dinobank.controller.SceneTransacaoWindowController">
   <children>
      <ComboBox fx:id="comboAcao" disable="true" layoutX="31.0" layoutY="31.0" onAction="#comboAcaoOnAction" prefWidth="160.0" promptText="Ação" />
      <TableView fx:id="tblTransacoes" layoutX="14.0" layoutY="260.0" prefHeight="224.0" prefWidth="516.0">
        <columns>
          <TableColumn prefWidth="98.0" text="Nº Conta&#10;Origem">
            <cellValueFactory>
                <PropertyValueFactory property="numContaOrigem" />
            </cellValueFactory>
          </TableColumn>
            <TableColumn prefWidth="123.0" text="Ação">
              <cellValueFactory>
                <PropertyValueFactory property="acao" />
              </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="121.0" text="Valor">
              <cellValueFactory>
                <PropertyValueFactory property="valor" />
              </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="91.0" text="Nº Conta&#10;Destino">
                <cellValueFactory>
                    <PropertyValueFactory property="numContaDestino" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="tblColumnData" prefWidth="82.0" text="Data">
              <cellValueFactory>
                    <PropertyValueFactory property="data" />
              </cellValueFactory>
            </TableColumn>
        </columns>
      </TableView>
      <TextField fx:id="txtContaOrigem" disable="true" layoutX="31.0" layoutY="118.0" promptText="Número da Conta" />
      <TextField fx:id="txtContaDestino" layoutX="362.0" layoutY="118.0" promptText="Número da Conta" visible="false" />
      <TextField fx:id="txtValor" disable="true" layoutX="222.0" layoutY="118.0" prefHeight="25.0" prefWidth="109.0" promptText="Valor" />
      <Button fx:id="btnCarregar" layoutX="319.0" layoutY="216.0" mnemonicParsing="false" onAction="#btnCarregarOnAction" styleClass="info" text="Carregar" />
      <TextField fx:id="txtCarregar" layoutX="164.0" layoutY="216.0" promptText="Filtrar" />
      <Label layoutX="66.0" layoutY="97.0" text="Conta Origem">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label fx:id="labelContaDestino" layoutX="397.0" layoutY="97.0" text="Conta Destino" visible="false">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Button fx:id="btnExecutar" layoutX="34.0" layoutY="173.0" mnemonicParsing="false" onAction="#btnExecutarOnAction" styleClass="success" text="Executar" />
      <Button layoutX="204.0" layoutY="31.0" mnemonicParsing="false" onAction="#btnNovaTransacaoOnAction" prefHeight="32.0" prefWidth="141.0" text="Nova Transação" />
   </children>
</AnchorPane>
